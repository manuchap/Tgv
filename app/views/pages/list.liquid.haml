    %a{:href => "/list?type=templates&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'videos' %}
  {% paginate contents.videos by 3 %}
  {% for video in contents.videos %}
  %a.w3-red.w3-padding{:href => "{% path_to video %}?type=video", :style => "font-size=large"}
    {{ video.name }}
  &nbsp;
  %i {{ 'whos' | translate }}
  %a{:href => "mailto:{{ video.account.email }}"} {{ video.account.name }}
  .w3-row
    .w3-quarter
      {% case video.origin %}
      {% when 'youtube' %}
      %img{:src => "http://img.youtube.com/vi/{{ video.url | remove: 'https://www.youtube.com/watch?v=' }}/sddefault.jpg", :style => "min-width: 100%;max-width: 100%;margin-top:1.4em;"}/
      {% when 'vimeo' %}
      {% action 'Vimeo API' %}
      var url = getProp('video.url');
      call = callAPI('GET', 'https://vimeo.com/api/oembed.json?url=' + url, {data: {}});
      setProp('thumb', call.data.thumbnail_url);
      {% endaction %}
      %img{:src => "{{thumb}}", :style => "min-width: 100%;max-width: 100%;margin-top:1.4em;"}/
      {% endcase %}
    .w3-threequarter.w3-padding
      %p {{ video.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 3 %}
