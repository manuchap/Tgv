---
title: List
published: true
handle: list
---
{% extends 'layouts/default' %}
{% block 'main' %}
.w3-container
  {% case params.type %}
  {% when 'actions' %}
  {% paginate contents.actions by 10 %}
  {% for action in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to action %}?type=action", :style => "font-size=large"} {{ action.name }}
  {{ 'whos' | translate }} {{ action.account.name }}
  %br
  %p {{ action.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=actions&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=actions&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'apps' %}
  {% paginate contents.apps by 10 %}
  {% for app in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to app %}?type=app", :style => "font-size=large"} {{ app.name }}
  {{ 'whos' | translate }} {{ app.account.name }}
  %br
  .w3-row
    .w3-quarter
      %img{:src => "{{ app.pict.url }}", :style => "min-width: 180px;max-width: 100px;margin-top:1.4em;"}/
    .w3-threequarter
      %p {{ app.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=apps&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=apps&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'gists' %}
  {% paginate contents.gists by 10 %}
  {% for gist in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to gist %}?type=gist", :style => "font-size=large"} {{ gist.name }}
  {{ 'whos' | translate }} {{ gist.account.name }}
  %br
  %p {{ gist.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=gists&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=gists&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'miscs' %}
  {% paginate contents.miscs by 10 %}
  {% for misc in paginate.collection %}
  {% case misc.type %}
  {% when 'Config' %}
  .w3-container.conf{:style => 'display: block'}
    %span.w3-tag.w3-round-large.w3-blue.w3-center.w3-right {{ misc.type }}
    %a.w3-red.w3-padding{:href => "{% path_to misc %}?type=misc", :style => "font-size=large"} {{ misc.name }}
    {{ 'whos' | translate }} {{ misc.account.name }}
    %br
    %p {{ misc.desc | truncatewords: '25' }}
    %hr
  {% when 'Gemfile' %}
  .w3-container.gemf{:style => 'display: block'}
    %span.w3-tag.w3-round-large.w3-green.w3-center.w3-right {{ misc.type }}
    %a.w3-red.w3-padding{:href => "{% path_to misc %}?type=misc", :style => "font-size=large"} {{ misc.name }}
    {{ 'whos' | translate }} {{ misc.account.name }}
    %br
    %p {{ misc.desc | truncatewords: '25' }}
    %hr
  {% when 'System' %}
  .w3-container.syst{:style => 'display: block'}
    %span.w3-tag.w3-round-large.w3-yellow.w3-center.w3-right {{ misc.type }}
    %a.w3-red.w3-padding{:href => "{% path_to misc %}?type=misc", :style => "font-size=large"} {{ misc.name }}
    {{ 'whos' | translate }} {{ misc.account.name }}
    %br
    %p {{ misc.desc | truncatewords: '25' }}
    %hr
  {% endcase %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=miscs&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=miscs&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endfor %}
  {% endpaginate %}
  {% when 'templates' %}
  {% paginate contents.templates by 10 %}
  {% for template in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to template %}?type=template", :style => "font-size=large"} {{ template.name }}
  {{ 'whos' | translate }} {{ template.account.name }}
  %br
  .w3-row
    .w3-quarter
      %img{:src => "{{ template.pict.url }}", :style => "min-width: 180px; max-width: 100px; max-height: 130px; margin-top:1.4em;"}/
    .w3-threequarter
      %p {{ template.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=templates&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=templates&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'videos' %}
  {% paginate contents.videos by 10 %}
  {% for video in contents.videos %}
  %a.w3-red.w3-padding{:href => "{% path_to video %}?type=video", :style => "font-size=large"} {{ video.name }}
  {{ 'whos' | translate }} {{ video.account.name }}
  %br
  .w3-row
    .w3-quarter
      {% case video.origin %}
      {% when 'youtube' %}
      %img{:src => "http://img.youtube.com/vi/{{ video.url | remove: 'https://www.youtube.com/watch?v=' }}/sddefault.jpg", :style => "min-width: 180px;max-width: 100px;margin-top:1.4em;"}/
      {% endcase %}
    .w3-threequarter
      %p {{ video.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=templates&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {{ 'prev' | translate }}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=templates&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {{ 'next' | translate }}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% endcase %}
{% endblock %}