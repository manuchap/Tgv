    %a{:href => "/list?type=gists&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'miscs' %}
  {% paginate contents.miscs by 10 %}
  {% for misc in paginate.collection %}
  {% case misc.type %}
  {% when 'Config' %}
  .w3-container.conf{:style => 'display: block'}
    %span.w3-tag.w3-round-large.w3-blue.w3-center.w3-right {{ misc.type }}
    %a.w3-red.w3-padding{:href => "{% path_to misc %}?type=conf", :style => "font-size=large"}
      {{ misc.name }}
    &nbsp;
    %i {{ 'whos' | translate }}
    %a{:href => "mailto:{{ misc.account.email }}"} {{ misc.account.name }}
    %p {{ misc.desc | truncatewords: '25' }}
