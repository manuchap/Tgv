---
title: List
published: true
listed: true
handle: list
position: 1
---
{% extends 'layouts/default' %}
{% block 'main' %}
.w3-container
  {% case params.type %}
  {% when 'actions' %}
  {% paginate contents.actions by 10 %}
  {% for action in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to action %}?type=action", :style => "font-size=large"}
    {{ action.name }}
  &nbsp;
  %i {{ 'whos' | translate }}
  %a{:href => "mailto:{{ action.account.email }}"} {{ action.account.name }}
  %p {{ action.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 10 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=actions&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=actions&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'apps' %}
  {% paginate contents.apps by 3 %}
  {% for app in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to app %}?type=app", :style => "font-size=large"}
    {{ app.name }}
  &nbsp;
  %i {{ 'whos' | translate }}
  %a{:href => "mailto:{{ app.account.email }}"} {{ app.account.name }}
  .w3-row
    .w3-quarter
      %img{:src => "{{ app.pict.url | resize: '241x>', strip: 'true' }}", :style => "min-width: 100%; max-width: 100%; max-height: 170px; margin-top:1.4em;"}/
    .w3-threequarter.w3-padding
      %p {{ app.desc | truncatewords: '25' }}
  %hr
  {% endfor %}
  .w3-row-padding.w3-center
    {% unless paginate.total_entries < 3 %}
    {% if paginate.previous_page %}
    %a{:href => "/list?type=apps&page={{paginate.previous_page}}"} {{ 'prev' | translate }}
    {% else %}
    {%endif%}
    {% if paginate.next_page %}
    %a{:href => "/list?type=apps&page={{paginate.next_page}}"} {{ 'next' | translate }}
    {% else %}
    {%endif%}
    {% endunless %}
  {% endpaginate %}
  {% when 'gists' %}
