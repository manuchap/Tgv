    {% endunless %}
  {% endpaginate %}
  {% when 'templates' %}
  {% paginate contents.templates by 3 %}
  {% for template in paginate.collection %}
  %a.w3-red.w3-padding{:href => "{% path_to template %}?type=template", :style => "font-size=large"}
    {{ template.name }}
  &nbsp;
  %i {{ 'whos' | translate }}
  %a{:href => "mailto:{{ template.account.email }}"} {{ template.account.name }}
  .w3-row
