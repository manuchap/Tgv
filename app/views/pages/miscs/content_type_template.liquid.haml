---
title: Miscs
slug: content_type_template
position: 0
published: true
is_layout: false
content_type: miscs
---
{% extends 'layouts/default' %}
{% block 'main' %}
{% case params.type %}
{% when 'conf' %}
%span.w3-tag.w3-round-large.w3-center.w3-right.w3-blue {{ misc.type }}
{% when 'gemf' %}
%span.w3-tag.w3-round-large.w3-center.w3-right.w3-green {{ misc.type }}
{% when 'gist' %}
%span.w3-tag.w3-round-large.w3-center.w3-right.w3-purple {{ misc.type }}
{% when 'syst' %}
%span.w3-tag.w3-round-large.w3-center.w3-right.w3-yellow {{ misc.type }}
{% endcase %}
%h3 {{ misc.name }}
%p{:style => "margin-top: -17px"}
  %i {{ 'whos' | translate }}
  %a{:href => "{{ misc.account.company }}", :target => "_blank"} {{ misc.account.name }}
  {% if misc.version %}
  %br
  %i
    Locomotive&nbsp;{{ misc.version }}
  {% endif %}
%p {{ misc.desc }}
.w3-panel.w3-card.w3-light-grey
{% case params.type %}
{% when 'gist' %}
<script src="{{ misc.code }}.js"></script>
{% else %}
.w3-code.jsHigh.notranslate {{ misc.code }}
{% endcase %}
%hr
.w3-container
  %a{:href => "{% path_to 'list' %}?type=miscs"}
    %i.fa.fa-arrow-left.fa-fw>
    \&#160; {{ 'back' | translate }}
%script{:src => "https://www.w3schools.com/lib/w3codecolor.js"}
:javascript
  w3CodeColor();
{% endblock %}
