---
title: Videos
slug: content_type_template
position: 0
listed: false
published: true
is_layout: false
content_type: videos
---
{% extends 'layouts/default' %}
{% block 'main' %}
.w3-main{:style => "margin-left:300px;margin-top:43px;"}
  %header{:style => "padding-top:22px"}
  .w3-container
    %h5 {{ video.name }}
    %p {{ video.desc }}
    {% case video.origin %}
    {% when 'youtube' %}
    %iframe{:allow => "autoplay; encrypted-media", :allowfullscreen => "", :frameborder => "0", :height => "480", :src => "https://www.youtube.com/embed/{{ video.url | remove: 'https://www.youtube.com/watch?v=' }}", :width => "854"}
    {% endcase %}
    %br
    %hr
  .w3-container
  .w3-container
    %a{:href => "{% path_to 'list' %}?type=videos"}
      %i.fa.fa-arrow-left.fa-fw>
      \&#160; {{ 'back' | translate }}
    {% include 'comments' %}
  {% include 'footer' %}
{% endblock %}
