{% extends 'layouts/default' %}
{% block 'main' %}
.w3-main{:style => "margin-left:300px;margin-top:43px;"}
  .w3-container{:style => "padding-top:22px"}
    %h3 {{ action.name }}
    %p  {{ 'whos' | translate }}  {{ action.user.name }}
    %p {{ action.desc }}
    .w3-panel.w3-card.w3-light-grey
      .w3-code.jsHigh.notranslate {{ action.code }}
    %hr
  .w3-container
    %a{:href => "{% path_to 'list' %}?type=actions"}
      %i.fa.fa-arrow-left.fa-fw>
      \&#160; {{ 'back' | translate }}
  %script{:src => "https://www.w3schools.com/lib/w3codecolor.js"}
  :javascript
    w3CodeColor();
  {% include 'comments' %}
  {% include 'footer' %}
{% endblock %}
