---
title: Actions
slug: content_type_template
position: 0
listed: false
published: true
is_layout: false
content_type: actions
---
{% extends 'layouts/default' %}
{% block 'main' %}
.w3-main{:style => "margin-left:300px;margin-top:43px;"}
  %header.w3-container{:style => "padding-top:22px"}
    .w3-container
      %h3 {{ action.name }}
      %p  {{ 'whos' | translate }}  {{ action.user.name }}
      %p {{ action.desc }}
      .w3-panel.w3-card.w3-light-grey
        .w3-code.jsHigh.notranslate {{ action.code }}
    %hr
    {% if action.demo %}
    .w3-container
      .w3-bar
        %button.w3-bar-item.w3-button.w3-red
          %a{:href => "{{ action.demo }}", :target => "_blank"} {{ 'demo' | translate }}
    {% endif %}
    %br
    .w3-container
      %a{:href => "{% path_to 'list' %}?type=actions"}
        %i.fa.fa-arrow-left.fa-fw>
        \&#160; {{ 'back' | translate }}
    %script{:src => "https://www.w3schools.com/lib/w3codecolor.js"}
    :javascript
      w3CodeColor();
    {% include 'comments' %}
  {% include 'footer' %}
{% endblock %}
