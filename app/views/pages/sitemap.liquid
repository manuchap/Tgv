title: Sitemap
slug: sitemap
position: 98
is_layout: false
listed: false
published: true
cache_strategy: none
response_type: text/xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in site.pages %}
  {% if page.published? and page.listed? %}
  {% case page.slug %}
  {% when 'index' %}
  <url>
    <loc>https://{{ host }}</loc>
    <lastmod>{{ now | date: "%F" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% else %}
  <url>
    <loc>https://{{ host }}/{{ page.fullpath }}</loc>
    <lastmod>{{ now | date: "%F" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endcase %}
  {% endif %}
  {% if page.templatized? %}
  <url>
    <loc>https://{{ host }}/?type={{ page.fullpath | remove: '/content_type_template' }}</loc>
    <lastmod>{{ now | date: "%F" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endif %}
  {% endfor %}
</urlset>