{% extends 'layouts/default' %}
{% block 'main' %}
/ !PAGE CONTENT!
.w3-main{:style => "margin-left:300px;margin-top:43px;"}
  / Header
  %header.w3-container{:style => "padding-top:12px"}
    %p {% editable_text 'welcome' %}{% endeditable_text %}
    .w3-card-4
      .w3-display-container.w3-animate-opacity
        %img{:src => "{% editable_file 'photo', hint: 'Photo du site', priority: 0 %}{% endeditable_file %}", :style => "min-width: 100%;max-width: 100%"}/
        .w3-display-middle.w3-text-white.w3-jumbo {% editable_text 'overlay', format: 'raw', rows: 1 %}{% endeditable_text %}
        .w3-container.w3-display-bottomright.w3-text-white.w3-large
    %p {% editable_text 'legend', format: 'raw', rows: 2 %}{% endeditable_text %}
  {% include 'footer' %}
  / End page content
{% endblock %}
